{
  "name": "starwars-names",
  "version": "1.0.0",
  "description": "star wars name",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "lint": "standard .",
    "test": "NODE_ENV=test nyc mocha",
    "test:watch": "mocha --watch",
    "validate": "npm-run-all --parallel lint test build"
  },
  "author": "Jacob Lorenzen <lorenzen.jacob@gmail.com> (https://github.com/jaxwood)",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "dependencies": {
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "cross-env": "^3.1.3",
    "expect": "^1.20.2",
    "ghooks": "^2.0.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "require": [
      "babel-register"
    ],
    "include": [
      "src/*.js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
